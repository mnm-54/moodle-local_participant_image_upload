{{!
    @template local_participant_image_upload/courselist
    Example context (json):
    {
        
    }
}}

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"
  integrity="sha512-n/4gHW3atM3QqRcbCn6ewmpxcLAHGaDjpEBu4xZd47N0W2oQ+6q7oc3PXstrJYXcbNU1OHdQ1T7pAP+gi5Yu8g=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
></script>

<link
  rel="stylesheet"
  type="text/css"
  href="./thirdpartylibs/DataTables/datatables.css"
/>

<script
  type="text/javascript"
  charset="utf8"
  src="./thirdpartylibs/DataTables/datatables.js"
></script>

<h1>{{#str}} title_courselist, local_participant_image_upload {{/str}}</h1>

<table class="table table-hover" border="1" id="data_table">
  <thead>
    <tr>
      <th class="bg-primary">
        {{#str}} course_name, local_participant_image_upload {{/str}}
      </th>
      <th class="bg-primary">
        {{#str}} access, local_participant_image_upload {{/str}}
      </th>
      <th class="bg-primary">
        {{#str}} attendancewindow, local_participant_image_upload {{/str}}
      </th>
    </tr>
  </thead>
  <hr />
  <tbody>
    {{#course_list}}
    <tr>
      <td>{{ fullname }}</td>
      <td>
        <a class="btn btn-primary" href="{{ redirecturl }}?cid={{ id }}">
          {{#str}} title_manage, local_participant_image_upload {{/str}}
        </a>
      </td>
      <td>
        {{#active}}
          <a class="btn btn-warning stop-btn" id="{{ id }}-{{ session_id }}">
            {{#str}} stop, local_participant_image_upload {{/str}}
          </a>
        {{/active}}
        {{^active}}
        <a class="btn btn-primary start-btn" id="{{ id }}">
          {{#str}} start, local_participant_image_upload {{/str}}
        </a>
        {{/active}}
      </td>
    </tr>
    {{/course_list}}
  </tbody>
</table>

<script>
  $(document).ready(function () {
    $("#data_table").DataTable();
  });
</script>
